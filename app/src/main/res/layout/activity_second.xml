<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_action_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/yourenametext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="14dp"
        android:text="Hello, Aldi"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/user_icon"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/store_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@mipmap/store_img_4"
        android:scaleType="fitXY"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/yourenametext" />

    <TextView
        android:id="@+id/storetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:textSize="16sp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/store_image"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/storelocationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cihampelas"
        android:textSize="16sp"
        android:layout_marginTop="26dp"
        android:textColor="@color/red"
        android:layout_marginEnd="19dp"
        app:layout_constraintTop_toBottomOf="@id/store_image"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/locationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storetext"
        />
    <TextView
        android:id="@+id/findmaptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Find On Maps"
        android:textSize="16sp"
        android:textColor="@color/red"
        app:layout_constraintEnd_toStartOf="@id/mapicon"
        app:layout_constraintTop_toBottomOf="@id/storelocationtext"/>

    <ImageView
        android:id="@+id/mapicon"
        android:layout_width="16dp"
        android:layout_height="23dp"
        android:src="@drawable/location_icon"
        android:tint="@color/red"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storelocationtext"/>

    <Button
        android:id="@+id/see_menus_button"
        android:layout_width="365dp"
        android:layout_height="48dp"
        android:text="See Menus"
        android:backgroundTint="@color/red"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/findmaptext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
